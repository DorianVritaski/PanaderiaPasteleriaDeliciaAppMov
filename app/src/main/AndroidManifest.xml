<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppDelicia01"
        tools:targetApi="31">

        <!-- 1) Pantalla inicial -->
        <activity
            android:name=".views.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppDelicia01">   <!-- MODIFICADO: Se quitó .NoActionBar -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2) Catálogo (debe existir activity_catalog.xml) -->
        <activity
            android:name=".views.CatalogActivity"
            android:label="Catálogo"
            android:theme="@style/Theme.AppDelicia01" /> <!-- MODIFICADO: Se quitó .NoActionBar -->

        <!-- 3) Carrito -->
        <activity android:name=".views.CartActivity" />

        <!-- 4) Login (si lo usarás en el checkout) -->
        <activity android:name=".views.LoginActivity" />

        <!-- 5) Perfil del usuario -->
        <activity android:name=".views.ProfileActivity"
            android:label="Mi Perfil"
            android:exported="false"
            android:theme="@style/Theme.AppDelicia01"/> <!-- MODIFICADO: Se quitó .NoActionBar -->

        <!-- 6) Registro de usuario -->
        <activity android:name=".views.RegisterActivity" />

        <activity
            android:name=".views.AddProductActivity"
            android:exported="false"
            android:theme="@style/Theme.AppDelicia01" /> <!-- MODIFICADO: Se quitó .NoActionBar -->

        <activity
            android:name=".views.DeliveryOptionsActivity"
            android:exported="false" />

        <activity
            android:name=".views.PaymentMethodActivity"
            android:exported="false" />

        <activity
            android:name=".views.OrderSuccessActivity"
            android:exported="false" />

        <activity
            android:name=".views.AdminOrdersActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".views.AdminOrderDetailActivity"
            android:exported="false" />

        <activity
            android:name=".views.MyOrdersActivity"
            android:exported="false" />

        <activity
            android:name=".views.EditProfileActivity"
            android:exported="false"
            android:label="Editar Perfil" />

    </application>
</manifest>
